{% block content %}
    {% block banner %}
    <div id="banner-area" class="banner-area" style="background-image:url({{ asset('build/images/perfectionnement.jpg') }}); background-position: 30% 30%;">
      <div class="banner-text">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <div class="banner-heading">
                <h1 class="banner-title">
                  Perfectionnement
                </h1>
              </div>
            </div>
          <!-- Col end -->
